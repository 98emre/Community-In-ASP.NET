@model DistroLabb2.Views.Home.ViewModels.SendViewModel

@{
    Layout = "_Layout";
}
<h1>Send</h1>

<h4>Message</h4>
<hr />
<div class="container form-top">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 col-sm-12 col-xs-12">
            <div class="panel panel-danger">
                <div class="panel-body">
                    <form asp-controller="Home" asp-action="Send" id="reused_form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="toUser"><i class="fa fa-user" aria-hidden="true"></i> To</label>
                            <div>
                                <select asp-for="toUser" asp-items="Model.listOfUsers">
                                    <option value="">All</option>
                                </select>
                            </div>
                            <span asp-validation-for="toUser" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="header"><i class="fa fa-envelope" aria-hidden="true"></i> Header</label>
                            <input asp-for="header" type="text" class="form-control" placeholder="Enter Header">
                            <span asp-validation-for="header" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="message"><i class="fa fa-comment" aria-hidden="true"></i> Message</label>
                            <textarea asp-for="message" rows="3" class="form-control" placeholder="Type Your Message"></textarea>
                            <span asp-validation-for="message" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                            <button class="btn btn-primary btn btn-raised btn-block btn-danger">Send →</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@if (!(Model.toUser is null))
{
    <div>
        Message sent to @Model.toUser, @DateTime.Now
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
